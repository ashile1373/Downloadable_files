<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/customCardView"
    android:layout_weight="2"
    android:background="@drawable/bottom_sheet_dialog_background_view"
    android:baselineAligned="false">


    <LinearLayout
        android:id="@+id/insertImageFromGallery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/custom_click_color_changer_rectangle"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/add_from_gallery" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="درج تصویر از گالری"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/title_font_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/insertImageFromCamera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/custom_click_color_changer_rectangle"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/add_from_camera" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="درج تصویر از دوربین"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/title_font_size" />

    </LinearLayout>

</LinearLayout>