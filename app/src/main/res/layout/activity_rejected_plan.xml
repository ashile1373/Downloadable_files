<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RejectedPlanActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/topView"
        style="@style/DefaultAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:background="@color/light_blue_600"
                android:minHeight="50dp"
                android:textAlignment="center">

                <LinearLayout
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/custom_click_color_changer_rectangle"
                    android:padding="5dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/ic_back_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="بازگشت"
                        android:textColor="@color/white"
                        android:textSize="@dimen/title_font_size" />
                </LinearLayout>


                <TextView
                    android:id="@+id/cancelRequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/custom_button_fill"
                    android:backgroundTint="@color/white"
                    android:padding="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="لغو عملیات"
                    android:textColor="@color/light_blue_600"
                    android:textSize="@dimen/normal_font_size"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_rounded_dialog"
            android:backgroundTint="@color/light_blue_600">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_button_fill"
                android:gravity="center_horizontal"
                android:text="اطلاعات برگشت طرح"
                android:textColor="@color/white"
                android:textSize="@dimen/title_font_size" />
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                style="@style/customCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layoutAnimation="@anim/layout_animation"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/rejectionReasonLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:hint="وضعیت تماس"
                        android:textAlignment="center"
                        app:boxCornerRadiusBottomEnd="30dp"
                        app:boxCornerRadiusBottomStart="30dp"
                        app:boxCornerRadiusTopEnd="30dp"
                        app:boxCornerRadiusTopStart="30dp"
                        app:boxStrokeErrorColor="@color/red"
                        app:boxStrokeWidth="1dp"
                        app:errorIconDrawable="@null"
                        app:errorTextAppearance="@color/red"
                        app:errorTextColor="@color/red"
                        app:startIconDrawable="@drawable/hidden_icon">

                        <AutoCompleteTextView
                            android:id="@+id/rejectionReason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="none"
                            android:textSize="@dimen/normal_font_size"
                            app:boxCornerRadiusBottomEnd="30dp"
                            app:boxCornerRadiusBottomStart="30dp"
                            app:boxCornerRadiusTopEnd="30dp"
                            app:boxCornerRadiusTopStart="30dp"
                            app:boxStrokeWidth="1dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/rejectedAnsweringLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="دلایل برگشت طرح :"
                            android:textSize="@dimen/title_font_size" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/rejectedErrorLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxStrokeErrorColor="@color/red"
                            app:boxStrokeWidth="1dp"
                            app:errorIconDrawable="@null"
                            app:errorTextAppearance="@color/red"
                            app:errorTextColor="@color/red"
                            app:startIconDrawable="@null" />

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/rejectedTypeNonCooperation"
                            style="@style/MyCheckboxStyleRejected"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="عدم همکاری مجری"
                            android:textSize="@dimen/normal_font_size" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/rejectedTypeNonCooperationDescriptionLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:hint="توضیحات عدم همکاری مجری"
                            android:visibility="gone"
                            app:boxCornerRadiusBottomEnd="30dp"
                            app:boxCornerRadiusBottomStart="30dp"
                            app:boxCornerRadiusTopEnd="30dp"
                            app:boxCornerRadiusTopStart="30dp"
                            app:boxStrokeErrorColor="@color/red"
                            app:boxStrokeWidth="1dp"
                            app:counterEnabled="true"
                            app:counterMaxLength="5000"
                            app:errorIconDrawable="@null"
                            app:errorTextAppearance="@color/red"
                            app:errorTextColor="@color/red"
                            app:startIconDrawable="@null">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/rejectedTypeNonCooperationDescription"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/iransans"
                                android:gravity="center_horizontal|top"
                                android:inputType="textMultiLine"
                                android:maxLength="5000"
                                android:minHeight="100dp"
                                android:textSize="@dimen/normal_font_size" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/rejectedTypeFailureToImplementPlan"
                            style="@style/MyCheckboxStyleRejected"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="عدم اجرای طرح"
                            android:textSize="@dimen/normal_font_size" />


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/rejectedTypeFailureToImplementDescriptionLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:hint="توضیحات عدم اجرای طرح"
                            android:visibility="gone"
                            app:boxCornerRadiusBottomEnd="30dp"
                            app:boxCornerRadiusBottomStart="30dp"
                            app:boxCornerRadiusTopEnd="30dp"
                            app:boxCornerRadiusTopStart="30dp"
                            app:boxStrokeErrorColor="@color/red"
                            app:boxStrokeWidth="1dp"
                            app:counterEnabled="true"
                            app:counterMaxLength="5000"
                            app:errorIconDrawable="@null"
                            app:errorTextAppearance="@color/red"
                            app:errorTextColor="@color/red"
                            app:startIconDrawable="@null">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/rejectedTypeFailureToImplementDescription"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/iransans"
                                android:gravity="center_horizontal|top"
                                android:inputType="textMultiLine"
                                android:maxLength="5000"
                                android:minHeight="100dp"
                                android:textSize="@dimen/normal_font_size" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/rejectedTypePersonalInfo"
                            style="@style/MyCheckboxStyleRejected"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="مغایرت در اطلاعات فردی"
                            android:textSize="@dimen/normal_font_size" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/rejectedTypePersonalInfoDescriptionLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:hint="توضیحات مغایرت در اطلاعات فردی"
                            android:visibility="gone"
                            app:boxCornerRadiusBottomEnd="30dp"
                            app:boxCornerRadiusBottomStart="30dp"
                            app:boxCornerRadiusTopEnd="30dp"
                            app:boxCornerRadiusTopStart="30dp"
                            app:boxStrokeErrorColor="@color/red"
                            app:boxStrokeWidth="1dp"
                            app:counterEnabled="true"
                            app:counterMaxLength="5000"
                            app:errorIconDrawable="@null"
                            app:errorTextAppearance="@color/red"
                            app:errorTextColor="@color/red"
                            app:startIconDrawable="@null">


                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/rejectedTypePersonalInfoDescription"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/iransans"
                                android:gravity="center_horizontal|top"
                                android:inputType="textMultiLine"
                                android:maxLength="5000"
                                android:minHeight="100dp"
                                android:textSize="@dimen/normal_font_size" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/rejectedTypeNoFacilityExist"
                            style="@style/MyCheckboxStyleRejected"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="عدم دریافت تسهیلات"
                            android:textSize="@dimen/normal_font_size" />


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/rejectedTypeNoFacilityExistDescriptionLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:hint="توضیحات عدم دریافت تسهیلات"
                            android:visibility="gone"
                            app:boxCornerRadiusBottomEnd="30dp"
                            app:boxCornerRadiusBottomStart="30dp"
                            app:boxCornerRadiusTopEnd="30dp"
                            app:boxCornerRadiusTopStart="30dp"
                            app:boxStrokeErrorColor="@color/red"
                            app:boxStrokeWidth="1dp"
                            app:counterEnabled="true"
                            app:counterMaxLength="5000"
                            app:errorIconDrawable="@null"
                            app:errorTextAppearance="@color/red"
                            app:errorTextColor="@color/red"
                            app:startIconDrawable="@null">


                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/rejectedTypeNoFacilityExistDescription"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/iransans"
                                android:gravity="center_horizontal|top"
                                android:inputType="textMultiLine"
                                android:maxLength="5000"
                                android:minHeight="100dp"
                                android:textSize="@dimen/normal_font_size" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/rejectedTypeNonCompletionOfPlan"
                            style="@style/MyCheckboxStyleRejected"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="عدم تکمیل طرح در حال حاضر"
                            android:textSize="@dimen/normal_font_size" />

                        <LinearLayout
                            android:id="@+id/rejectedTypeNonCompletionOfPlanLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal"
                                android:weightSum="4">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/rejectedTypeNonCompletionOfPlanStartInMonthLayout"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:hint="تخمین زمان تکمیل طرح"
                                    app:boxCornerRadiusBottomEnd="30dp"
                                    app:boxCornerRadiusBottomStart="30dp"
                                    app:boxCornerRadiusTopEnd="30dp"
                                    app:boxCornerRadiusTopStart="30dp"
                                    app:boxStrokeErrorColor="@color/red"
                                    app:boxStrokeWidth="1dp"
                                    app:errorIconDrawable="@null"
                                    app:errorTextAppearance="@color/red"
                                    app:errorTextColor="@color/red">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/rejectedTypeNonCompletionOfPlanStartInMonth"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginEnd="5dp"
                                        android:gravity="center"
                                        android:inputType="number"
                                        android:maxLength="4"
                                        android:textSize="@dimen/normal_font_size" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="ماه"
                                    android:textSize="@dimen/title_font_size" />

                            </LinearLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/rejectedTypeNonCompletionOfPlanDescriptionLayout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:hint="توضیحات عدم تکمیل طرح در حال حاضر"
                                app:boxCornerRadiusBottomEnd="30dp"
                                app:boxCornerRadiusBottomStart="30dp"
                                app:boxCornerRadiusTopEnd="30dp"
                                app:boxCornerRadiusTopStart="30dp"
                                app:boxStrokeErrorColor="@color/red"
                                app:boxStrokeWidth="1dp"
                                app:counterEnabled="true"
                                app:counterMaxLength="5000"
                                app:errorIconDrawable="@null"
                                app:errorTextAppearance="@color/red"
                                app:errorTextColor="@color/red"
                                app:startIconDrawable="@null">


                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/rejectedTypeNonCompletionOfPlanDescription"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentEnd="true"
                                    android:drawablePadding="10dp"
                                    android:fontFamily="@font/iransans"
                                    android:gravity="center_horizontal|top"
                                    android:inputType="textMultiLine"
                                    android:maxLength="5000"
                                    android:minHeight="100dp"
                                    android:textSize="@dimen/normal_font_size" />

                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/rejectedNotAnsweredDescriptionLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:hint="توضیحات عدم پاسخ"
                        android:visibility="gone"
                        app:boxCornerRadiusBottomEnd="30dp"
                        app:boxCornerRadiusBottomStart="30dp"
                        app:boxCornerRadiusTopEnd="30dp"
                        app:boxCornerRadiusTopStart="30dp"
                        app:boxStrokeErrorColor="@color/red"
                        app:boxStrokeWidth="1dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="5000"
                        app:errorIconDrawable="@null"
                        app:errorTextAppearance="@color/red"
                        app:errorTextColor="@color/red"
                        app:startIconDrawable="@null">


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/rejectedNotAnsweredDescription"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/iransans"
                            android:gravity="center_horizontal|top"
                            android:inputType="textMultiLine"
                            android:maxLength="5000"
                            android:minHeight="100dp"
                            android:textSize="@dimen/normal_font_size" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/bottomBar"
                        style="@style/customCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">


                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/nextStep"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:background="@drawable/custom_button_fill"
                                android:backgroundTint="@color/light_blue_600"
                                android:paddingStart="12dp"
                                android:paddingTop="7dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="7dp"
                                android:text="ثبت نهایی"
                                android:textColor="@color/white"
                                android:textSize="@dimen/normal_font_size" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>