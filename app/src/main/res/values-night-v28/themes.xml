<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Payesh" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/navy_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor">@color/blue_200</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="cardBackgroundColor">@color/dark_bottomnavbar</item>
        <item name="android:navigationBarColor">@color/dark_bottomnavbar</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Arzesh.LargeComponent
        </item>
    </style>

    <style name="ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/dark_bottomnavbar</item>
        <item name="titleTextStyle">@style/ActionModeTitleTextStyle</item>
    </style>

    <style name="customCardView" parent="CardView">
        <item name="android:backgroundTint">@color/dark_bottomnavbar</item>
    </style>

    <style name="customCardViewWithNormalBackground" parent="CardView">
        <item name="android:backgroundTint">@color/background_dark</item>
    </style>

    <style name="customCardViewWithAlpha" parent="CardView">
        <item name="android:backgroundTint">@color/alpha_dark_bottomnavbar</item>
    </style>

    <style name="customCardViewToastMessage" parent="CardView">
        <item name="android:backgroundTint">@color/toast_dark_background</item>
    </style>

    <style name="customCardViewWithNoElevation" parent="CardView">
        <item name="cardElevation">0dp</item>
        <item name="android:backgroundTint">@color/blue_500</item>
    </style>

    <style name="customCardViewWithBlue500TintColor" parent="CardView">
        <item name="android:backgroundTint">@color/blue_500</item>
    </style>

    <style name="customCardViewSearchLayout" parent="CardView">
        <item name="android:backgroundTint">@color/dark_bottomnavbar</item>
    </style>

    <style name="ReceivedMessageCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialCardView.Received
        </item>
        <item name="android:backgroundTint">@color/dark_gray</item>
    </style>


    <style name="ShapeAppearanceOverlay.MaterialCardView.Received" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/white</item>
        <item name="android:progressTint">@color/white</item>
        <item name="android:thumbTint">@color/white</item>
    </style>

    <color name="ucrop_color_toolbar">@color/white</color>
    <color name="ucrop_color_statusbar">@color/background_dark</color>
    <color name="ucrop_color_widget_active">@color/navy_blue</color>

    <style name="ShapeAppearance.Arzesh.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="MyCheckboxStyleCorrection" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/toast_yellow</item>
    </style>

    <style name="MyCheckboxStyleConfirm" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/toast_green</item>
    </style>

    <style name="MyCheckboxStyleViolation" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/toast_red</item>
    </style>

    <style name="MyCheckboxStyleRejected" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/toast_blue</item>
    </style>

</resources>