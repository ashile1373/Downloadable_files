<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Payesh" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/navy_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_200</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:layoutDirection">rtl</item>
        <!--        <item name="android:windowContentTransitions">true</item>-->
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:navigationIcon">@color/navy_blue</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Arzesh.LargeComponent</item>
    </style>

    <style name="ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/blue_500</item>
        <item name="titleTextStyle">@style/ActionModeTitleTextStyle</item>
    </style>

    <style name="ActionModeTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="customCardView" parent="CardView">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="customCardViewWithNormalBackground" parent="CardView">
        <item name="android:backgroundTint">@color/background_light</item>
    </style>

    <style name="customCardViewWithBlue200TintColor" parent="CardView">
        <item name="android:backgroundTint">@color/blue_200</item>
    </style>

    <style name="customCardViewWithBlue500TintColor" parent="CardView">
        <item name="android:backgroundTint">@color/blue_500</item>
    </style>

    <style name="customCardViewSearchLayout" parent="CardView">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="customCardViewToastMessage" parent="CardView">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="customCardViewWithNoElevation" parent="CardView">
        <item name="cardElevation">0dp</item>
    </style>

    <style name="DefaultAppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Theme.Payesh.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyLoginApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyLoginApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Base.V7.Widget.AppCompat.Toolbar." parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorSecondary">@color/white
        </item>
    </style>

    <style name="TextAppearance.Design.Tab." parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ThemeOverlay.MyPopupTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorBackground">@color/blue_500</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--    image editor-->
        <!-- Here you can add color of your choice  -->
    <color name="ucrop_color_toolbar">@color/white</color>
    <color name="ucrop_color_statusbar">@color/blue_200</color>
    <color name="ucrop_color_widget_active">@color/navy_blue</color>

    <style name="ShapeAppearance.Arzesh.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="MyCheckboxStyleCorrection" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/toast_yellow</item>
    </style>

    <style name="MyCheckboxStyleConfirm" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/toast_green</item>
    </style>

    <style name="MyCheckboxStyleViolation" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/toast_red</item>
    </style>

    <style name="MyCheckboxStyleRejected" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/toast_blue</item>
    </style>

</resources>